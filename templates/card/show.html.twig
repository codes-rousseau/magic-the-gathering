{% extends 'base.html.twig' %}

{% block title %}{{ card.name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ card.name }}</h1>
    <p>
        <a href="{{ path('set_show', {'id': set.id}) }}">Revenir Ã  la collection</a>
    </p>
    <p>
        <img src="../cards/{{ card.image }}" alt="{{ card.name }}" height="500px">
        <ul>
            <li>Type : {{ card.type }}</li>
            <li>Artiste : {{ card.artist }}</li>
            <li>Description : {{ card.description }}</li>
            <li>Couleurs : 
                <ul>
                {% for color in colors %}
                    <li>{{ color.name }}</li>
                {% endfor %}
                </ul>
            </li>
        </ul>
    </p>
</div>
{% endblock %}
