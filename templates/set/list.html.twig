{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | List all sets
{% endblock title %}

{% block body %}
    <main role="main">
        <div class="container">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th scope="col" class="icon-set">&nbsp;</th>
                    <th scope="col" class="text-center">Code</th>
                    <th scope="col">Name</th>
                    <th scope="col" class="text-right">Cards</th>
                    <th scope="col" class="text-center">Date</th>
                    <th scope="col" class="text-right">Actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for set in sets %}
                        <tr>
                            <th scope="row" class="icon-set">
                                <img src="{{ set.iconUrl }}" alt="Icon of {{ set.name }}" />
                            </th>
                            <td class="text-center">{{ set.code }}</td>
                            <td>{{ set.name }}</td>
                            <td class="text-right">{{ set.cards|length }} cards</td>
                            <td class="text-center">
                                {% if set.releasedAt %}
                                    {{ set.releasedAt|date('Y-m-d') }}
                                {% else %}
                                    &ndash;
                                {% endif %}
                            </td>
                            <td class="text-right">
                                <a class="btn btn-primary btn-sm" href="{{ path('set_show', {id: set.id}) }}" role="button">
                                    Show cards
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </main>
{% endblock %}